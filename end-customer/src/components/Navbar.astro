---
const links = [
  { name: "Sign Up", href: "/signup" },
  { name: "Log In", href: "/login" },
];
---

<header>
  <section class="container mx-auto flex px-4 py-4 lg:px-8">
    <!-- Desktop Nav -->
    <nav class="flex flex-1 items-center justify-between">
      <div>
        <a href="/">Logo</a>
      </div>

      <!-- Nav List -->
      <ul class="space-x-2 hidden md:flex">
        {
          links.map((link) => {
            return (
              <li>
                <a
                  class="block px-2 py-1 bg-blue-500 rounded-lg text-white"
                  href={link.href}
                >
                  {link.name}
                </a>
              </li>
            );
          })
        }
      </ul>
    </nav>

    <!-- Mobile Menu Btn -->
    <button id="nav-menu-btn" class="md:hidden">Menu</button>

    <!-- Mobile Nav Menu Bg -->
    <div
      id="nav-menu-bg"
      class="transition fixed top-0 left-0 w-full h-full bg-black bg-opacity-50 opacity-0 pointer-events-none md:hidden"
    >
    </div>

    <!-- Mobile Nav Menu -->
    <nav
      id="nav-menu"
      class="transition fixed top-0 left-0 w-3/4 h-full bg-white p-4 -translate-x-full md:hidden"
    >
      <a class="block pb-4 border-b" href="/">Logo</a>
      <ul class="mt-2 space-y-4">
        {
          links.map((link) => {
            return (
              <li>
                <a href={link.href}>{link.name}</a>
              </li>
            );
          })
        }
      </ul>
    </nav>
  </section>
</header>

<script>
  const navMenuBtn = document.querySelector("#nav-menu-btn");
  const navMenuBg = document.querySelector("#nav-menu-bg");
  const navMenu = document.querySelector("#nav-menu");

  navMenuBtn.addEventListener("click", () => {
    navMenuBg.classList.remove("opacity-0");
    navMenuBg.classList.remove("pointer-events-none");
    navMenu.classList.remove("-translate-x-full");
  });

  navMenuBg.addEventListener("click", () => {
    navMenuBg.classList.add("opacity-0");
    navMenuBg.classList.add("pointer-events-none");
    navMenu.classList.add("-translate-x-full");
  });
</script>
